<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
	<!-- username校验规则 -->
	<field name="username">
		<!-- username必须输入 -->
		<field-validator type="requiredstring" short-circuit="true">	<!-- short-circuit校验短路 -->
			<param name="trim">true</param>
			<message>${getText("username.required")}</message>
		</field-validator>
		<!-- username长度必须为6-12个字符 -->
		<field-validator type="regex">
			<param name="expression"><![CDATA[(\w{6,20})]]></param>
			<message>${getText("username.rule")}</message>
		</field-validator>
	</field>
	
	<!-- password校验规则 -->
	<field name="password">
		<!-- "password"必须输入 -->
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("password.required")}</message>
		</field-validator>
		<!-- "password"长度必须为6-12个字符 -->
		<field-validator type="regex">
			<param name="expression"><![CDATA[(\w{6,20})]]></param>
			<message>${getText("password.rule")}</message>
		</field-validator>
	</field>
	
	<!-- repassword校验规则 -->
	<field name="repassword">
		<!-- repassword必须输入 -->
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("repassword.required")}</message>
		</field-validator>
		<!-- "repassword"长度必须为6-12个字符 -->
		<field-validator type="regex">
			<param name="expression"><![CDATA[(\w{6,20})]]></param>
			<message>${getText("repassword.rule")}</message>
		</field-validator>
		<!-- password 和 repassword必须相同 -->
		<field-validator type="fieldexpression">
			<param name="expression"><![CDATA[(repassword==password)]]></param>
			<message>${getText("repassword.equals")}</message>
		</field-validator>
	</field>
	
	<!-- age校验规则 -->
	<field name="age">
		<field-validator type="int">
			<param name="min">18</param>
			<param name="max">100</param>
			<message>${getText("age.rule")}</message>
		</field-validator>
	</field>
	
	<!-- birth校验规则 -->
	<field name="birth">
		<field-validator type="date">
			<param name="min">1900-01-01</param>
			<param name="max">2017-01-01</param>
			<message>${getText("birth.rule")}</message>
		</field-validator>
	</field>
	
	<field name="email">
		<field-validator type="email">
			<message>${getText("email.rule")}</message>
		</field-validator>
	</field>
	
</validators>